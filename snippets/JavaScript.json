{
  "New React Hook": {
    "prefix": "hook",
    "body": [
      "function use${1:HookName}(${2:args}) {\r\t$3\r}\r\rexport default use${1:HookName};"
    ],
    "description": "Create a new React hook"
  },

  "Prettier Ignore": {
    "prefix": "prettierIgnore",
    "body": ["// prettier-ignore"],
    "description": "Insert a Prettier ignore comment"
  },

  "ES Lint Disable Next Line": {
    "prefix": "eslintDisableNextLine",
    "body": ["// eslint-disable-next-line"],
    "description": "Insert a comment to disable ESLint rules for the next line"
  },

  "ES Lint Inline Off": {
    "prefix": "eslintInlineOff",
    "body": ["/* eslint ${1:rule}: off */$0"],
    "description": "Insert a comment to disable a specific ESLint rule inline"
  },

  "Add TODO comment": {
    "prefix": "todo",
    "body": ["// TODO: "],
    "description": "Insert a TODO comment"
  },

  "Add TODO comment (with category)": {
    "prefix": "todoc",
    "body": ["// TODO $1: "],
    "description": "Insert a TODO comment with a category"
  }
}
