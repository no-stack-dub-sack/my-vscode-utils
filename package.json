{
  "name": "my-vscode-utils",
  "displayName": "My VS Code Utils",
  "author": "Peter Weinberg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/no-stack-dub-sack/my-vscode-utils.git"
  },
  "description": "VS Code. By me, for me.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:my-vscode-utils.toggleMetaFiles",
    "onCommand:my-vscode-utils.autoComment",
    "onCommand:my-vscode-utils.surroundWithMultiLineComment"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-vscode-utils.toggleMetaFiles",
        "title": "Hide/Show Salesforce Meta Files"
      },
      {
        "command": "my-vscode-utils.surroundWithMultiLineComment",
        "title": "Surround Selection with Multi-line Comment"
      }
    ],
    "keybindings": [
      {
        "key": "enter",
        "when": "editorTextFocus && !suggestWidgetVisible && !editorHasSelection",
        "command": "my-vscode-utils.autoComment"
      },
      {
        "key": "ctrl+alt+/",
        "command": "my-vscode-utils.surroundWithMultiLineComment",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+alt+m",
        "command": "my-vscode-utils.toggleMetaFiles",
        "when": "explorerViewletVisible"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "My VS Code Utils",
      "properties": {
        "my-vscode-utils.comment.extensions": {
          "type": "array",
          "default": [
            ".ts",
            ".tsx",
            ".js",
            ".cs",
            ".cls",
            ".scss",
            ".json",
            ".jsonc",
            ".trigger"
          ],
          "description": "Comment commands will apply to the file types in this array."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
